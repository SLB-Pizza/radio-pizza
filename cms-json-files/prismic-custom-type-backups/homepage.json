{
  "Hero": {
    "homepage_carousel": {
      "type": "Group",
      "config": {
        "fields": {
          "slide_bg": {
            "type": "Image",
            "config": {
              "constraint": {
                "width": 1920
              },
              "thumbnails": [
                {
                  "name": "widescreen",
                  "width": 1407,
                  "height": null
                },
                {
                  "name": "desktop",
                  "width": 1215,
                  "height": null
                },
                {
                  "name": "tablet",
                  "width": 1023,
                  "height": null
                },
                {
                  "name": "mobile",
                  "width": 767,
                  "height": null
                },
                {
                  "name": "lo_fi",
                  "width": 64,
                  "height": 64
                }
              ],
              "label": "(REQUIRED) Slide Background Image"
            }
          },
          "slide_headline": {
            "type": "Text",
            "config": {
              "label": "Slide Headline",
              "placeholder": "Enter Slide Headline here..."
            }
          },
          "slide_cta": {
            "type": "Text",
            "config": {
              "label": "Slide Call To Action",
              "placeholder": "Enter a few words as a Call to Action here..."
            }
          },
          "slide_link": {
            "type": "Link",
            "config": {
              "allowTargetBlank": true,
              "label": "(REQUIRED) Slide Link",
              "placeholder": "Select the HMBK content or external link here..."
            }
          }
        },
        "label": "Homepage Carousel (Maximum 5 Slides)"
      }
    }
  },
  "Section Titles and Blurbs": {
    "home_mixes_titling": {
      "type": "Text",
      "config": {
        "label": "Sound Selects Section Titling",
        "placeholder": "Enter Home Mixes headline here..."
      }
    },
    "home_mixes_blurb": {
      "type": "Text",
      "config": {
        "label": "Sound Selects Section Blurb",
        "placeholder": "Enter Home Mixes section blurb..."
      }
    },
    "home_events_titling": {
      "type": "Text",
      "config": {
        "label": "Homepage Event Section Titling",
        "placeholder": "Enter Home Events headline here..."
      }
    },
    "home_events_blurb": {
      "type": "Text",
      "config": {
        "label": "Homepage Event Section Blurb",
        "placeholder": "Enter Home Events section blurb..."
      }
    },
    "home_editorial_titling": {
      "type": "Text",
      "config": {
        "label": "Home Editorial Section Titling",
        "placeholder": "Enter Home Editorial headline here..."
      }
    },
    "home_editorial_blurb": {
      "type": "Text",
      "config": {
        "label": "Home Editorial Section Blurb",
        "placeholder": "Enter Home Editorial section blurb..."
      }
    }
  },
  "Sound Selects": {
    "home_mixes": {
      "type": "Group",
      "config": {
        "fields": {
          "node": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["mix"],
              "label": "Sound Select",
              "placeholder": "Select a Mix that will appear in the Sound Selects section..."
            }
          }
        },
        "label": "Mixes to Display in Homepage Mixes Section (Maximum 12)"
      }
    }
  },
  "Editorials": {
    "editorials": {
      "type": "Group",
      "config": {
        "fields": {
          "node": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["feature"],
              "label": "Home Feature",
              "placeholder": "Select a Feature that will appear in the Editorials section..."
            }
          }
        },
        "label": "Editorials to Display in Homepage Editorial Section (Maximum 4)"
      }
    }
  }
}
