{
  "Hero": {
    "homepage_carousel": {
      "type": "Group",
      "config": {
        "fields": {
          "slide_bg": {
            "type": "Image",
            "config": {
              "constraint": {},
              "thumbnails": [
                {
                  "name": "fhd",
                  "width": 1920,
                  "height": null
                },
                {
                  "name": "widescreen",
                  "width": 1407,
                  "height": null
                },
                {
                  "name": "desktop",
                  "width": 1215,
                  "height": null
                },
                {
                  "name": "tablet",
                  "width": 1023,
                  "height": null
                },
                {
                  "name": "mobile",
                  "width": 767,
                  "height": null
                },
                {
                  "name": "lo_fi",
                  "width": 64,
                  "height": 64
                }
              ],
              "label": "(REQUIRED) Slide Background Image"
            }
          },
          "slide_headline": {
            "type": "StructuredText",
            "config": {
              "single": "heading1",
              "label": "(REQUIRED) Slide Headline",
              "placeholder": "Enter Slide Headline here..."
            }
          },
          "slide_cta": {
            "type": "StructuredText",
            "config": {
              "single": "heading4",
              "label": "Slide Call To Action",
              "placeholder": "Enter Slide Call To Action Here"
            }
          },
          "slide_link": {
            "type": "Link",
            "config": {
              "allowTargetBlank": true,
              "label": "(REQUIRED) Slide Link",
              "placeholder": "Enter the link to HMBK content or external link here..."
            }
          }
        },
        "label": "Homepage Carousel"
      }
    }
  },
  "Section Titles and Blurbs": {
    "home_mixes_headline": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Home Mixes Headline",
        "placeholder": "Enter Home Mixes headline here..."
      }
    },
    "home_mixes_blurb": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph, strong, em",
        "label": "Home Mixes Blurb",
        "placeholder": "Enter Home Mixes blurb here..."
      }
    },
    "home_events_headline": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Home Events Headline",
        "placeholder": "Enter Home Events headline here"
      }
    },
    "home_events_blurb": {
      "type": "StructuredText",
      "config": {
        "single": "paragraph, strong, em",
        "label": "Home Events Blurb",
        "placeholder": "Enter Home Events blurb here..."
      }
    },
    "home_features_headline": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Home Features Headline",
        "placeholder": "Enter Home Features Headline here..."
      }
    },
    "home_features_blurb": {
      "type": "StructuredText",
      "config": {
        "single": "paragraph, strong, em",
        "label": "Home Features Blurb",
        "placeholder": "Enter Home Features blurb here..."
      }
    }
  },
  "Sound Selects": {
    "home_mixes": {
      "type": "Group",
      "config": {
        "fields": {
          "sound_select": {
            "type": "Link",
            "config": {
              "customtypes": ["mix"],
              "select": "document",
              "label": "Sound Select",
              "placeholder": "Select a Mix that will appear in the Sound Selects section..."
            }
          }
        },
        "label": "home_mixes"
      }
    }
  },
  "Editorials": {
    "editorials": {
      "type": "Group",
      "config": {
        "fields": {
          "home_feature": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["feature"],
              "label": "home_feature",
              "placeholder": "Select a Feature that will appear in the Editorials section..."
            }
          }
        },
        "label": "Editorials"
      }
    }
  }
}
